platform :ios, '13.0'

use_frameworks! :linkage => :static
use_modular_headers!

# --- robust podhelper loader (supports both layouts) ---
flutter_application_path = File.expand_path('..', __dir__)
helper_in_ios   = File.expand_path(File.join(__dir__, 'Flutter', 'podhelper.rb'))
helper_in_dotios = File.expand_path(File.join(flutter_application_path, '.ios', 'Flutter', 'podhelper.rb'))

if File.exist?(helper_in_ios)
  require helper_in_ios
elsif File.exist?(helper_in_dotios)
  eval(File.read(helper_in_dotios), binding)
else
  abort('‚ùå podhelper.rb not found. Run `flutter pub get` before CocoaPods, or ensure Flutter generated iOS files.')
end
# -------------------------------------------------------

target 'Runner' do
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  flutter_additional_ios_build_settings(installer)
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |config|
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end
