platform :ios, '13.0'

use_frameworks! :linkage => :static
use_modular_headers!

# 讀 ios/Flutter/podhelper.rb
require File.expand_path(File.join(__dir__, 'Flutter', 'podhelper.rb'))

target 'Runner' do
  # ❌ 原本（會讓 helper 去找 ios/.flutter-plugins-dependencies）
  # flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # ✅ 正確：不帶參數，讓 helper 自己從專案根找 .flutter-plugins-dependencies
  flutter_install_all_ios_pods
end

post_install do |installer|
  flutter_additional_ios_build_settings(installer)
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |config|
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end
